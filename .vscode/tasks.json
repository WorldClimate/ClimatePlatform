// Sass configuration
{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Sass Compile",
        "type": "shell",
        "command": "sass Assets/sass/main.scss Assets/css/main.css",
        "group": "build"
      },
      {
        "label": "Dotnet Watch",
        "type": "shell",
        "command": "dotnet watch",
        "group": {
          "kind": "build"
        }
      }
    ]
  }