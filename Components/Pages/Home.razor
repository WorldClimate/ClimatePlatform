@page "/"
@using ClimatePlatform.Components

<html>
	<body class="homepage is-preload">
		<div id="page-wrapper">

			<!-- Header -->
				<header id="header">
					<div class="logo container">
						<div>
							<h1><a href="/" id="logo">The World Climate</a></h1>
						</div>
					</div>
					<div><image src="assets/images/logo-transparent.png" width="200px" height="200px"></image></div>
